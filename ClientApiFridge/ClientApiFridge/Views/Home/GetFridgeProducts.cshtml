@model FridgeProductSpDto
@{
    Layout = "_Layout"; ViewBag.Title = "Get all products";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>


<h2>Products in fridge</h2>
<a asp-action="GetFridges" class="btn btn-sm btn-primary"> Back to previous page</a>
<input type="hidden" id="FridgeId" />

    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product id</th>
                <th>Fridge id</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.FridgeProducts)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.ProductId</td>
                    <td>@product.FridgeId</td>
                    <td>@product.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
<form asp-action="StoredProcedure" asp-route-id="@Model.FridgeId">
    <input type="hidden" value="@Model.FridgeId">
    <input type="submit" value="Call" class="btn btn-outline-primary">
</form>




