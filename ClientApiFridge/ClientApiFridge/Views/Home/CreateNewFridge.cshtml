@{
}

@model FridgeModelsAndProductsObject
@{
    Layout = "_Layout"; ViewBag.Title = "Create new fridge";
}
<form asp-action="CreateNewFridge" method="post">
    <div class="form-group" id="myForm">
        <label for="Name">Name:</label>
        <input class="form-control" name="Name" asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="Owner_Name">Owner Name:</label>
        <input class="form-control" name="Owner_Name" asp-for="Owner_Name"/>
		<span asp-validation-for="Owner_Name"></span>
    </div>
    <label>Choose model of fridge:</label>
    <select name="modelId" class="form-control">
        @foreach(var fridgeModel in Model.FridgeModels)
        {
            <option value="@fridgeModel.Id" selected>@fridgeModel.Name</option>
        }
        <span asp-validation-for="FridgeModels"></span>
    </select>
    <h2>

    </h2>
    <label for="products">Choose start products:</label>
    <select name="productId" class="form-control" multiple>
        <span asp-validation-for="Products"></span>
        @foreach(var product in Model.Products)    
        {
            <option value="@product.Id" selected>@product.Name</option>
        }
    </select>
    <p>Hold down the Ctrl (windows) or Command (Mac) button to select multiple options.</p>
    <div class="text-center panel-body">
        <input type="submit" class="btn btn-sm btn-primary" value="Create"/>
    </div>

    @section scripts{

        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
</form>