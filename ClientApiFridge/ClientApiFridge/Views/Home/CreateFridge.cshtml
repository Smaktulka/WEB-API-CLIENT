@{
}
@model FridgesDto
@{ Layout = "_Layout"; ViewBag.Title = "Create new fridge";}

<h2>Create new fridge<a asp-action="GetFridges" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="CreateFridge" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input class="form-control" name="Name" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label for="Owner_Name">Owner Name:</label>
        <input class="form-control" name="Owner_Name" asp-for="Owner_Name"/>
        <span asp-validation-for="Owner_Name"></span>
    </div>
    <div class="form-group">
        <label for="ModelId">Model Id:</label>
        <input class="form-control" name="ModelId" asp-for="ModelId"/>
        <span asp-validation-for="ModelId"></span>
    </div>
    <div class="text-center panel-body">
        <input type="submit" class="btn btn-sm btn-primary" value="Create"/>
    </div>

    @section scripts{

        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    }
</form>
@if(Model != null)
{
    <h2>New fridge</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Model Id</th>
                <th>Owner Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>@Model.Id</th>
                <td>@Model.Name</td>
                <td>@Model.ModelId</td>
                <td>@Model.Owner_Name</td>
            </tr>
        </tbody>
    </table>

}

